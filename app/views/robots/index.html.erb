
<div class="home_link">
  <h1><%= link_to 'PSKLRMRFI', robots_path, class: 'home-link' %></h1>
</div>

<main id="main-homepage">
  
  <h3 class='header_left'>Manufacturers</h3>
  <h3 class='header_mid'>Robots In Inventory</h3>
  <h3 class='header_right'>In Queue</h3>
  <br>
  <section class="manufacturer_viewer_left">
    
    <% @manufacturers.each do |manufacturer| %>
      <ul>
        <li>
        <%= link_to manufacturer.name, manufacturer %>
        </li>
      </ul>
    <% end %>
  </section>

   
  
  <section class="robots_viewer_middle">
   
    <% @robots.each do |robot| %>
      <ul>
        <% unless robot.pending %>
          <li>
            <%= link_to robot.designation, robot %>
          </li>
        <% end %>
      </ul>

    <% end %>
  </section>

  
  
  <section class="pending_viewer_right">

    <% @robots.each do |robot| %>
      <ul>
        <% if robot.pending %>
          <li>
            <%= link_to robot.model_no, robot %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </section>

</main>
